{%-if include.opcode.targets-%}
	{%-for target in include.opcode.targets-%}
		{%-assign target_name  = include.opcode.name | replace: '*', target.name-%}
		{%-assign opcode_names = opcode_names | append: '|' | append: target_name-%}
	{%-endfor-%}
{%-else-%}
	{%-assign opcode_names = opcode_names | append: '|' | append: include.opcode.name-%}
{%-endif-%}
{%-for alias in include.opcode.alias-%}
	{% include sfz/functions/addOpcodeToSyntaxHighlighting.liquid
		opcode = alias %}
{%-endfor-%}
{%-for midi_cc in include.opcode.modulation.midi_cc-%}
	{% include sfz/functions/addOpcodeToSyntaxHighlighting.liquid
		opcode = midi_cc %}
{%-endfor-%}
{%-for velocity_cc in include.opcode.modulation.velocity-%}
	{% include sfz/functions/addOpcodeToSyntaxHighlighting.liquid
		opcode = velocity_cc %}
{%-endfor-%}
