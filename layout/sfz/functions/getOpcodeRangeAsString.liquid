{%-assign opcode_value_range_result = ""-%}
{%-if include.opcode.value.min == nil-%}
	{%-if include.opcode.value.options-%}
		{%-for option in include.opcode.value.options-%}
			{%-assign opcode_value_range_result = opcode_value_range_result | append: option.name-%}
				{%-if forloop.last == false-%}
					{%-assign opcode_value_range_result = opcode_value_range_result | append: ", "-%}
				{%-endif-%}
		{%-endfor-%}
	{%-else-%}
		{%-assign opcode_value_range_result = "N/A"-%}
	{%-endif-%}
{%-else-%}
	{%-assign opcode_value_range_result = include.opcode.value.min | append: " to " |
		append: include.opcode.value.max | append: ' ' |
		append: include.opcode.value.unit-%}
{%-endif-%}
{{ opcode_value_range_result }}
{%-comment-%} No new line, avoid <p>{%-endcomment-%}
