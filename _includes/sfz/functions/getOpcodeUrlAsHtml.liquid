{%-assign opcode_url_result = ""-%}
{%-if include.opcode.url == nil-%}
	{%-assign opcode_name = include.opcode.name |
		replace: '#', '' | replace: '*', ''-%}
	{%-assign opcode_url_result = '<a href="/opcodes/' | append: opcode_name |
		append: '">' | append: include.opcode.name | append: '</a>'-%}
{%-else-%}
	{%-assign opcode_url_result = '<a href="' | append: opcode.url |
		append: '">' | append: include.opcode.name | append: '</a>'-%}
{%-endif-%}
{{ opcode_url_result }}
{%-comment-%} No new line, avoid <p>{%-endcomment-%}
